import java.awt.Point;
public class Vector {
	public double vx, vy, v, d, r;
	public Vector(Point pnt) {
		vx = pnt.getX();
		vy = pnt.getY();
		v = Math.sqrt((vx*vx) + (vy*vy));
		r = Math.atan(vy/vx);
		d = Math.toDegrees(r);
	}
	
	public Vector(double x, double y) {
		vx = x;
		vy = y;
		v = Math.sqrt((vx*vx) + (vy*vy));
		r = Math.atan(vy/vx);
		d = Math.toDegrees(r);
	}
	
	public Vector(Vector vec) {
		vx = vec.vx;
		vy = vec.vy;
		v = vec.v;
		r = vec.r;
		d = vec.d;
	}
	
	public void addVector(Vector vec) {
		this.vx += vec.vx;
		this.vy += vec.vy;
		this.v = Math.sqrt((vx*vx) + (vy*vy));
		r = Math.atan(vy/vx);
		d = Math.toDegrees(r);
	}
}
