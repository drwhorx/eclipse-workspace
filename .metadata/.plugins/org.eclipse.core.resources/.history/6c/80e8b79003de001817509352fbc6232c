import java.awt.Point;
public class Vector {
	public double vx, vy, v, d, r;
	public void point(Point pnt) {
		vx = pnt.getX();
		vy = pnt.getY();
		v = Math.sqrt((vx*vx) + (vy*vy));
		r = Math.atan(vy/vx);
		d = Math.toDegrees(r);
	}
	
	public void xy(double x, double y) {
		vx = x;
		vy = y;
		v = Math.sqrt((vx*vx) + (vy*vy));
		r = Math.atan(vy/vx);
		d = Math.toDegrees(r);
	}
	
	public void mag(double mag, double deg) {
		d = deg;
		r = Math.toRadians(d);
		v = mag;
		vy = mag * Math.sin(r);
		vx = mag * Math.cos(r);
	}
	
	public void addVector(Vector vec) {
		this.vx += vec.vx;
		this.vy += vec.vy;
		this.v = Math.sqrt((vx*vx) + (vy*vy));
		r = Math.atan(vy/vx);
		d = Math.toDegrees(r);
	}
}
